<aside class="main-sidebar">
    <section class="sidebar">
        @* BEGIN Search *@
        @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "sidebar-form" }))
        {
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        }
        @* END Search *@
        @* BEGIN Menu *@
        <ul class="sidebar-menu">
            <li class="header">MENU</li>
            @if (Request.IsAuthenticated)
            {
                if (Roles.IsUserInRole("admin"))
                {
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-money"></i> <span>Payroll</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li>@Html.ActionLink("Manage","Index","Payroll")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-clock-o"></i> <span>TimeSheets</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li>@Html.ActionLink("Manage","Index","TimeSheet")</li>
                            <li>@Html.ActionLink("Create","Create","TimeSheet")</li>
                        </ul>
                    </li>
                }
            }            
        </ul>
        @* END Menu *@
    </section>
</aside>